<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<i>This is article <%= @article.id %> </i>
<br>
<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= button_to "Delete", @article, method: :delete %></li>
  <li><a href="/articles/">Back to home</a></li>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>


<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<i>This is article <%= @article.id %> </i>
<br>
<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?",
                    turbo_remote: true
                  } %></li>
  <li><a href="/articles/">Back to home</a></li>
</ul>
